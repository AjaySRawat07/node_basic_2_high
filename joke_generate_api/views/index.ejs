                <div>
                    <select id="typeOfJoke">
                        <option value="general" <%= data.type === "general" ? "selected" : "" %>>general</option>
                        <option value="programming" <%= data.type === "programming" ? "selected" : "" %>>programming</option>
                        <option value="knock-knock" <%= data.type === "knock-knock" ? "selected" : "" %>>knock-knock</option>
                    </select>
                </div>
                <% if (data) { %>
